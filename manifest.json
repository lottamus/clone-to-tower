{
  "manifest_version": 3,
  "name": "Clone in Tower",
  "description": "Adds a button to GitHub.com repositories to clone it in Tower.",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "tower-dock-icon-dark.png"
    }
  },
  "icons": {
    "128": "tower-dock-icon-dark.png"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "include_globs": ["https://github.com/?*/?*"],
      "exclude_globs": ["https://github.com/?*/?*/*"],
      "js": ["src/pages/content/index.tsx"],
      "css": []
    }
  ]
}
